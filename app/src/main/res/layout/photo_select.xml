<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <ImageView
        android:id="@+id/imageview_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:background="@drawable/noimage"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_webview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:visibility="gone"/>

<!--    <WebView
        android:id="@+id/webview_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:visibility="gone"/>-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1.7">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="5"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/button_photo_load"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="5dp"
            android:text="업로드"/>
        <Button
            android:id="@+id/button_photo_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="5dp"
            android:text="저장"/>
        <Button
            android:id="@+id/button_photo_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:text="취소"/>

    </LinearLayout>

</LinearLayout>