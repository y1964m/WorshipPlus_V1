<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/song_check_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:text="#"
            android:textColor="@color/DarkModeBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/song_title_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.1"
            android:text="Title"
            android:textColor="@color/DarkModeBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/song_chord_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textCapSentences"
            android:textSize="16sp"
            android:textColor="@color/DarkModeBlack"/>

        <!--  <ToggleButton
            android:id="@+id/toggleButton_song_detail_main"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_toggle_button"
            android:textOn="∧"
            android:textOff="∨"

            />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:visibility="visible"></LinearLayout>

</LinearLayout>